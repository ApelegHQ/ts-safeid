{
	"compilerOptions": {
		"target": "es6",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"outDir": "dist",
		"strict": true,
		"strictNullChecks": true,
		"alwaysStrict": true,
		"noUnusedLocals": true,
		"esModuleInterop": true,
		"skipLibCheck": false,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": false,
		"lib": ["es6", "dom"],
		"declaration": true
	},
	"ts-node": {
		"experimentalResolver": true
	},
	"include": ["src/**/*", "types/**/*"],
	"exclude": [
		"node_modules",
		"build",
		"dist"
	],
	"types": ["node"]
}
